extends layout

block content
    h1(id="login-title") GA4GH Passports
    img(src='./lib/public/favicon.ico' alt='login' style='width:100px; height:100px;')
    if error
        p.
            #{error}
    form(action=action, method="POST")
        input(type="hidden", name="_csrf", value=csrfToken)
        input(type="hidden", name="challenge", value=challenge)
        table(style="")
            tr
                td
                    input(type="email", id="email", name="email", value=hint, placeholder="email@foobar.com")
                td.
                    (it's "foo@ga4gh.org")
            tr
                td
                    input(type="password", id="password", name="password")
                td.
                    
        input(type="checkbox", id="remember", name="remember", value="1")
        label(for="remember") Remember me
        br
        input(type="submit", id="accept", name="submit", value="Log in")
        input(type="submit", id="reject", name="submit", value="Deny access")
